{
  "bracket-pair-colorizer-2.activeScopeCSS": [
    "borderStyle : solid",
    "borderWidth : 2px",
    "borderColor : {color}",
    "opacity: 0.5"
  ],
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.tabWidth": 2,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.lineNumbers": "on",
  "zenMode.hideLineNumbers": false,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.tabSize": 2,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "name": "One Dark italic",
        "scope": [
          "comment",
          "entity.other.attribute-name",
          "keyword",
          "markup.underline.link",
          "storage.modifier",
          "storage.type",
          "string.url",
          "variable.language.super",
          "variable.language.this"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "name": "One Dark italic reset",
        "scope": [
          "keyword.operator",
          "keyword.other.type",
          "storage.modifier.import",
          "storage.modifier.package",
          "storage.type.built-in",
          "storage.type.function.arrow",
          "storage.type.generic",
          "storage.type.java",
          "storage.type.primitive"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ],
    "comments": "#ff6ae1"
    // "comments": "#ff77e4a3"
  },
  "editor.renderWhitespace": "none",
  "code-runner.runInTerminal": true,
  "editor.guides.indentation": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "vue-html": "html",
    "vue": "html"
  },
  "workbench.colorCustomizations": {
    "editor.selectionBackground": "#807d81", //Current SELECTED text
    "editor.selectionHighlightBackground": "#f2ff00d8", //same content as the selection
    "editor.findMatchBackground": "#c8f516eb", //Current SEARCH MATCH
    "editor.findMatchHighlightBackground": "#ffbe82", //Other SEARCH MATCHES

    "minimapSlider.background": "#009c8c40",
    // "minimapSlider.background": "#d1f543eb",
    "minimapSlider.hoverBackground": "#ff0000",
    // "minimapSlider.activeBackground": "#2f00ff50"

    "[One Monokai]": {
      // "activityBar.background": "#ff0000",
      // "sideBar.background": "#347890",
      // "editor.background": "#3e3c34df",
      "editor.background": "#3c3b37df"
    }
  },
  "editor.minimap.showSlider": "always",
  "[python]": {
    "editor.formatOnType": true,

    "editor.defaultFormatter": "ms-python.python",
    // "editor.defaultFormatter": "ms-python.autopep8",
  },
  // "python.formatting.provider": "none",

  "git.openRepositoryInParentFolders": "never",
  "workbench.iconTheme": "vscode-icons-mac",
  "workbench.colorTheme": "One Monokai",
  "files.autoSave": "onFocusChange",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.guides.bracketPairs": "active",
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "window.zoomLevel": -1
}
